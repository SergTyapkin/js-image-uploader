{
  "compilerOptions": {
    "declaration": true,
    "outDir": "./dist",

    "target": "es2015",
    "allowJs": false,
    "skipLibCheck": true,

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": ["src/*"],
}
